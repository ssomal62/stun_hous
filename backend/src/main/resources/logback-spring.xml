<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 공통 프로퍼티 -->
    <property name="APP_NAME" value="stun-hous"/>
    <property name="ENV" value="${spring.profiles.active:-dev}"/>
    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>
    <property name="MAX_HISTORY" value="30"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="TOTAL_SIZE_CAP" value="2GB"/>

    <!-- 개발용 콘솔(색상) -->
    <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 시간 레벨 로거 스레드 메시지 -->
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) %green(%thread) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 운영용 콘솔(JSON) -->
    <appender name="CONSOLE_PROD" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <pattern>
                    <pattern>
                        {
                        "service":"${APP_NAME}",
                        "env":"${ENV}",
                        "level":"%level",
                        "logger":"%logger",
                        "thread":"%thread",
                        "message":"%message",
                        "siteId":"%mdc{siteId}",
                        "deviceId":"%mdc{deviceId}",
                        "shadowSync":"%mdc{shadowSync}",
                        "actor":"%mdc{actor}",
                        "traceId":"%mdc{traceId}",
                        "spanId":"%mdc{spanId}"
                        }
                    </pattern>
                </pattern>
                <mdc/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- 파일 롤링(공통) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/><logLevel/><loggerName/><message/><mdc/><stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- ERROR 전용 파일(공통) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <file>${LOG_DIR}/${APP_NAME}-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/><logLevel/><loggerName/><message/><mdc/><stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- 비동 파일(공통) -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- ===== dev 프로파일 ===== -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE_DEV"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>
    </springProfile>

    <!-- ===== test 프로파일 ===== -->
    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE_DEV"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>

    <!-- ===== prod 프로파일 ===== -->
    <springProfile name="prod">
        <!-- 컨테이너/클라우드: JSON 콘솔(파서 친화적) -->
        <root level="WARN">
            <appender-ref ref="CONSOLE_PROD"/>
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
        <logger name="org.springframework" level="WARN"/>
    </springProfile>

</configuration>
